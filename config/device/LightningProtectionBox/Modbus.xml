<?xml version="1.0" encoding="UTF-8"?>
<root desc="分散空调">
	<queryAnalog desc="查询模拟量">
		<part name="soi" desc="数据包头">
			<type>aptotic</type>
			<value>7E</value>
			<class>byte</class>
			<len>1</len>
		</part>
		<part name="ver" desc="通信协议版本">
			<type>aptotic</type>
			<value>3231</value>
			<class>byte</class>
			<len>2</len>
		</part>
		<part name="adr" desc="设备地址描述(1~254)">
			<type>increase</type>
			<value>
				<part name="increase" desc="节点自增需要的信息">
					<type>increase</type>
					<!-- 由 1 开始-->
					<value>1</value>
					<!-- 每次加 1 -->
					<split>1</split>
					<fill-byte>30</fill-byte>
					<fill-direction>left</fill-direction>
					<class>inttohextobyte</class>
					<len>2</len>
				</part>
			</value>
			<class>hextobyte</class>
			<len>2</len>
		</part>
		<part name="cid1" desc="设备类型描述,分散空调为60">
			<type>aptotic</type>
			<value>3630</value>
			<class>byte</class>
			<len>2</len>
		</part>
		<part name="cid2" desc="返回码">
			<type>aptotic</type>
			<value>3432</value>
			<class>byte</class>
			<len>2</len>
		</part>
		<part name="length" desc="info字节长度，包括lenid和lchksum">
			<type>aptotic</type>
			<value>30303030</value>
			<class>byte</class>
			<len>4</len>
		</part>
		<part name="chksum" desc="校验和码">
			<type>check</type>
			<value>
				<part name="check-info" desc="参加计算校验的字段">
					<type>chksum</type>
					<value>ver,adr,cid1,cid2,length</value>
					<split>,</split>
					<fill-byte></fill-byte>
					<fill-direction></fill-direction>
					<class></class>
					<len></len>
				</part>
			</value>
			<class>byte</class>
			<len>4</len>
		</part>
		<part name="eoi" desc="结束吗">
			<type>aptotic</type>
			<value>0d</value>
			<class>byte</class>
			<len>1</len>
		</part>
	</queryAnalog>
</root>